procedure SetGain1;
var Gain1_index:integer;
begin

    gain1_index:=TDBrecord('PG0.global').Gain1_index;
    case Gain1_index of
    1: TDBrecord('PG0.global').Gain1 := 1.0; 2: TDBrecord('PG0.global').Gain1 := 2.0;
